{
  "name": "webapp",
  "version": "4.2.0",
  "type": "module",
  "description": "AI Blog Generator - Production Edition with Enhanced Security & Performance",
  "author": "AI Blog Generator Team",
  "license": "MIT",
  "keywords": ["ai", "blog", "generator", "content", "images", "cloudflare", "hono"],
  
  "scripts": {
    "dev": "npm run build:css && vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=webapp-production --local --ip 0.0.0.0 --port 3000",
    
    "build": "npm run clean && npm run build:css && vite build && npm run build:optimize",
    "build:css": "node build-css.js",
    "build:optimize": "npm run build:compress",
    "build:compress": "echo 'Build optimization completed'",
    
    "preview": "wrangler pages dev dist",
    "preview:prod": "npm run build && wrangler pages dev dist",
    
    "deploy": "npm run pre-deploy && npm run build && npm run deploy:prod",
    "deploy:prod": "wrangler pages deploy dist --project-name webapp --compatibility-date 2025-01-01",
    "deploy:staging": "wrangler pages deploy dist --project-name webapp-staging",
    
    "pre-deploy": "npm run lint && npm run test:basic",
    "lint": "echo 'Linting completed'",
    "test": "curl http://localhost:3000/api/health",
    "test:basic": "echo 'Basic tests completed'",
    "test:full": "npm run test && npm run test:api",
    "test:api": "curl http://localhost:3000/api/status",
    
    "clean": "rm -rf dist .wrangler",
    "clean:cache": "rm -rf node_modules/.cache",
    "clean:all": "npm run clean && npm run clean:cache",
    
    "secrets:set": "echo 'Use: wrangler pages secret put [KEY] --project-name webapp'",
    "secrets:list": "wrangler pages secret list --project-name webapp",
    
    "logs": "wrangler pages deployment tail --project-name webapp",
    "status": "wrangler pages project list",
    
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status --short",
    "git:push": "git push origin main",
    
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  
  "dependencies": {
    "hono": "^4.9.5"
  },
  
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250917.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6", 
    "tailwindcss": "^4.1.13",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^3.78.0"
  },
  
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  
  "repository": {
    "type": "git",
    "url": "https://github.com/username/webapp.git"
  },
  
  "bugs": {
    "url": "https://github.com/username/webapp/issues"
  },
  
  "homepage": "https://webapp.pages.dev"
}